<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/clInsuranceDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/insuranceLogo"
            android:layout_width="0dp"
            android:layout_height="114dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/insurance_bus" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="monospace"
            android:text="@string/insurance_name_na"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBaseline_toBaselineOf="@+id/insuranceName"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/insuranceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="monospace"
            android:text="@string/insurance_n"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:textStyle="normal"
            android:typeface="monospace"
            app:layout_constraintStart_toEndOf="@+id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/insuranceLogo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:text="@string/insurance_add"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <TextView
            android:id="@+id/insuranceAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:text="@string/insurance_address"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:textStyle="normal"
            android:typeface="monospace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="monospace"
            android:text="@string/insurance_count"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBaseline_toBaselineOf="@+id/country"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="monospace"
            android:text="@string/insurance_country"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:textStyle="normal"
            android:typeface="monospace"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/insuranceAddress" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="monospace"
            android:text="@string/insurace_cit"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBaseline_toBaselineOf="@+id/city"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="monospace"
            android:text="@string/insurace_city"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:textStyle="normal"
            android:typeface="monospace"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="monospace"
            android:text="@string/insurance_reg"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBaseline_toBaselineOf="@+id/region"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="monospace"
            android:text="@string/insurance_region"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:textStyle="normal"
            android:typeface="monospace"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/city" />

        <!--<TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="monospace"
            android:text="@string/insurance_ar"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBaseline_toBaselineOf="@+id/area"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="monospace"
            android:text="@string/insurance_area"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:textStyle="normal"
            android:typeface="monospace"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/region" />-->

        <ImageView
            android:id="@+id/mapLocation"
            android:layout_width="29dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:contentDescription="@string/placeholder"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/insuranceLogo"
            app:srcCompat="@drawable/ic_location_name" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:text="@string/work_tim"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/workTimes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:freezesText="false"
            android:inputType="textMultiLine"
            android:saveEnabled="false"
            android:singleLine="false"
            android:soundEffectsEnabled="false"
            android:text="@string/work_times"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:textStyle="normal"
            android:typeface="monospace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintWidth_default="wrap" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:text="@string/about_m"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/workTimes" />

        <TextView
            android:id="@+id/aboutMe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:inputType="textMultiLine"
            android:text="@string/about_me"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:textStyle="normal"
            android:typeface="monospace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="monospace"
            android:text="@string/sendRequest"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintBaseline_toBaselineOf="@+id/sendRequest"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sendRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:fontFamily="monospace"
            android:text="@string/sendReq"
            android:textColor="@color/colorRed"
            android:textSize="18sp"
            android:textStyle="normal"
            android:typeface="monospace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/aboutMe" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="280dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="gone" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>

